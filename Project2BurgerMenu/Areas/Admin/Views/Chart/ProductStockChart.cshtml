@{
    ViewBag.Title = "ProductStockChart";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Kategori-Ürün Grafiği</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <style>
        .card {
            height: 400px; /* Set a fixed height for the card */
        }

        #pieChart {
            width: 100%;
            height: 100%; /* Set the height to 100% of the card */
        }
    </style>
</head>
<body>
    <div class="col-lg-6 grid-margin grid-margin-lg-0 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"></h4>
                <canvas id="pieChart"></canvas>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $.ajax({
                type: "POST",
                dataType: "json",
                contentType: "application/json",
                url: '@Url.Action("CategoryProductChart", "Chart", new { area = "Admin" })',
                success: function (result) {
                    drawChart(result);
                },
                error: function (xhr, status, error) {
                    console.error("AJAX Hatası:", status, error);
                }
            });
        });

        function drawChart(result) {
            var labels = [];
            var dataValues = [];

            $.each(result, function (i, obj) {
                labels.push(obj.CategoryName);
                dataValues.push(obj.ProductCount);
            });

            var ctx = document.getElementById('pieChart').getContext('2d');
            var myPieChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Ürün Sayısı',
                        data: dataValues,
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.6)',
                            'rgba(54, 162, 235, 0.6)',
                            'rgba(255, 206, 86, 0.6)',
                            'rgba(75, 192, 192, 0.6)',
                            'rgba(153, 102, 255, 0.6)',
                            'rgba(255, 159, 64, 0.6)'
                        ],
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    title: {
                        display: true,
                        text: 'Ürün-Stok Grafiği'
                    },
                }
            });
        }
    </script>
</body>
</html>
